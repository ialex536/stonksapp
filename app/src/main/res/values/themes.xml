<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Stonks" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/pale_purple</item>
        <item name="colorOnPrimary">@color/cool_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pale_yellow</item>
        <item name="colorSecondaryVariant">@color/pale_orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorButtonNormal">@color/pale_pink</item>
        <item name="android:colorButtonNormal">@color/pale_pink</item>
    </style>

</resources>