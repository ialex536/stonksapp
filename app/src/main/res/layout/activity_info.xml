<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:theme="@style/Theme.Stonks"
    android:background="@color/cool_white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity">

    <TextView
        android:id="@+id/tv_info_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/sofia_pro"
        android:textFontWeight="800"
        android:text="Subtitle"
        android:textSize="28sp"
        android:gravity="center_horizontal" />

    <ScrollView
        android:id="@+id/sv_info_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_info_navigation"
        android:layout_below="@id/tv_info_subtitle"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_info_scroll_image1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="200dp"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/tv_info_scroll_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textFontWeight="600"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/iv_info_scroll_image2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="200dp"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/tv_info_scroll_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textFontWeight="600"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/iv_info_scroll_image3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="200dp"
                android:adjustViewBounds="true" />

            <TextView
                android:id="@+id/tv_info_scroll_text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textFontWeight="600"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/iv_info_scroll_image4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="200dp"
                android:adjustViewBounds="true" />

            <TextView
                android:id="@+id/tv_info_scroll_text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textFontWeight="600"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/iv_info_scroll_image5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="200dp"
                android:adjustViewBounds="true" />

            <TextView
                android:id="@+id/tv_info_scroll_text5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textFontWeight="600"
                android:textSize="18sp"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_info_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btn_info_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="back"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_info_next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Next"
            app:layout_constraintEnd_toEndOf="parent" />
    </LinearLayout>

</RelativeLayout>